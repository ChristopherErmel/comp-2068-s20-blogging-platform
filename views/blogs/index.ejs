<%- include ('../partials/header') %>

<div class="container my-5">
    <header>
        <h1>Archive</h1>
        <br>
    </header>
    <hr>
    <div class="content">
        <% for (let blog of blogs) { %> 
            <!-- to show all blogs -->
            <%= //JSON.stringify(blog, null, 2) %>
            <div class="card my-3">
                <div class="card-img-top">
                </div>
                <div class="card-body">
                    <div class="clearfix">
                        <h5 class="card-title float-left"><%= blog.title  %> </h5>
                        <div class="float-right">
                            <small><%= blog.updatedAt %></small>
                        </div>
                    </div>
                  <p class="card-text">
                      <%= blog.synopsis %> 
                  </p>
                  <a href="/blogs/<%= blog.id  %> ">more...</a>
                </div>
              </div>
        <% } %> 
    </div>
</div>

<%- include ('../partials/footer') %>