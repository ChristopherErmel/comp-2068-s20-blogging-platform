<!-- if there is not cation path(i.e. it its not from edit) then its a create new and it should go to blogs. -->
<form action="<%= (typeof actionPath === 'undefined') ? '/blogs' : actionPath %>", method="POST">
    <!-- hidden feild in form to send id to controller only if the path is underfined-->
    <% if (typeof actionPath !== 'undefined') { %> 
    <input type="hidden" name="id" value="<%= formData.id %>">
    <% } %> 
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" name="title" class="form-control" value="<%= formData.title %>">
    </div>
    <div class="form-group">
        <label for="content">Content</label>
        <textarea name="content" class="form-control summernote"><%= formData.content %></textarea>
    </div>
    <div class="form-group">
        <label for="status">Status</label>
        <select name="status" class="form-control">
            <option value="DRAFT">Draft</option>
            <!-- If published was selected from the form data then select publiched -->
            <option <%= formData.status && formData.status === 'PUBLISHED' ? 'selected' : null %> value="PUBLISHED">Published</option>
        </select>
    </div>
    <div class="form-group">
        <button class="btn btn-dark">Submit</button>
    </div>
</form>
